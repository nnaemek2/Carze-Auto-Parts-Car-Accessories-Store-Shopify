<div data-section-id="{{ section.id }}" data-section-type="section-service-v1" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-service-v1 mt-all">
    <div class="container container-v2">
      <div class="row">
        {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
        {% if block.type == "service" %}
        <div class="col-md-4">
          <div class="service-item">
            <div class="service-inner">
              {% if block.settings.img_icon != blank %}
               <div class="icon-image">
                <img data-src="{{block.settings.img_icon |img_url : 'master'}}" class="lazyload" alt="_img">
               </div>
              {% else %}
              <span class="icon">
                <i class="{{block.settings.block_icon}}" aria-hidden="true"></i>
              </span>
              {% endif %}
              <div class="service-content">
                {% if block.settings.block_title != blank %}
                <h4 class="title">{{block.settings.block_title}}</h4>
                {% endif %}
                
                {% if block.settings.block_des != blank %}
                <p class="desc mb-0">{{block.settings.block_des}}</p>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
        {% endif %}
        {% endfor %}
        {% endif %}

      </div>
    </div>
  </div>
</div>

{% schema %}
