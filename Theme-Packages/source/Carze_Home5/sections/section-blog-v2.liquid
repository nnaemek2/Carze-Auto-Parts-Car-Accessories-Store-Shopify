<div data-section-id="{{ section.id }}" data-section-type="section-blog-v2" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %} {% if section.settings.sections_layout == "dark" %}background: {{section.settings.sections_bg_color}};{% endif %}">
  <div class="section-blog-v2" style="background-color:{{section.settings.bg-section}};" >
    <div class="container container-v1">
      <div class="row align-items-end mb-5">        
        {% if section.settings.section_title != blank %}
        <div class="col-lg-4 col-md-5">
          <div class="text-left">         
            <h3 class="title-section-blog mb-0" >{{section.settings.section_title}}</h3>            
          </div>          
        </div>
        {% endif %}

        {% if section.settings.text_btn_top != blank %}
        <div class="col-lg-8 col-md-7">
          <div class="button-top text-left">
            <a href="{{section.settings.url_button}}">{{section.settings.text_btn_top}}</a>
          </div>
        </div>
        {% endif %}
      </div>
      <div class="row js-blog-v2 content-blog-v2">
        {%- assign posts_limit = section.settings.blogs_limit -%}
        {%- assign blog_selected = section.settings.select_blog -%}
        {% if section.settings.select_blog != blank%}
        {% for article in blogs[blog_selected].articles limit: posts_limit %}

        <div class="col-12">
          <div class="content-section-blog-v2 text-center">
            <div class="picrure">
              <a href="{{ article.url }}"  class="image_url">
                <img data-src="{{ article.image.src | img_url: 'original' }}" alt="{{ article.title  }}" class="lazyload img-fluid">
              </a>
            </div>

            <div class="info_blog">
              {% if section.settings.enable_category %}
              <a class="blog_cate" href="{{blogs[blog_selected].url}}">{{blogs[blog_selected].title}}</a>
              {% endif %}
              {% if section.settings.enable_title %}
              <h4 class="mb-0 title-blog"><a href="{{ article.url }}">{{ article.title  }}</a></h4>
              {% endif %}
            </div>
          </div>
        </div>

        {% endfor %}
        {% else %}
        {% for i in (1..6) %}
        <div class="col-12">
          <div class="content-section-blog-v2 text-center">
            <div class="picrure">
              <a href="/admin/articles"  class="image_url">
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              </a>
            </div>
            <div class="info_blog">
                
              {% if section.settings.enable_category %}
              <a class="blog_cate" href="/admin/articles">News</a>
              {% endif %}
                {% if section.settings.enable_title %}
                <h4 class="mb-0 title-blog">
                  <a href="/admin/articles">Example Blog Post</a>
                </h4>
                {% endif %}
            </div>
          </div>
        </div>
        {% endfor %} 
        {% endif %}

      </div> 

    </div>
  </div>
</div>
{% schema %}
{
  "name": "BLOG V2",
  "class": "index-section",
  "settings": [
  {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
  {
      "type": "header",
      "content": "Settings Blog"
    },
  {
      "type": "color",
      "id": "bg-section",
      "label": "Background Color blog",
      "default": "#f2f2f2"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Title",
      "default": "INSPIRATION"
    },
  {
      "type": "text",
      "id": "text_btn_top",
      "label": "Text Button",
      "default": "VIEW ALL BLOGPOST"
    },
  {
      "type": "url",
      "id": "url_button",
      "label": "URL button",
      "default": "/collections/all"
    },
    {
      "type": "header",
      "content": "Setting Blog"
    },
    {
      "type": "blog",
      "id": "select_blog",
      "label": "Select Blog"
    },
    {
      "type": "header",
      "content": "Info Blogs"
    },
    {
      "type": "range",
      "id": "blogs_limit",
      "label": "Limit blogs",
      "min": 2,
      "max": 50,
      "step": 1,
      "default": 3
    },
  {
      "type": "checkbox",
      "id": "enable_category",
      "label": "Show Category",
      "default": true
    },

    {
      "type": "checkbox",
      "id": "enable_title",
      "label": "Show Title",
      "default": true
    }    

  ],
  "presets": [
    {
      "name": "BLOG V2",
      "category": "HOME"
    }
  ]
}
{% endschema %}


