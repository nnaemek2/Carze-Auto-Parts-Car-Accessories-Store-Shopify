<div data-section-id="{{ section.id }}" data-section-type="section-product-v5" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-product-v5">
    <div class="container container-v2">
      <div class="row">
        <div class="{% if section.settings.select_position_banner == 'left' %}col-12 col-md-7 col-lg-8 order-2{% else %}col-12 col-md-7 col-lg-8 order-1{% endif %}">
          <div class="row">
            {% if section.blocks.size > 0 %}
            {% for block in section.blocks %}
            {% if block.type == "collection" %}
            {% assign products_limit = block.settings.products_limit %}
            {% assign col = block.settings.select_collection %}
            <div class="col-12 col-md-6">
              <div class="product-v5">
                <div class="section-title">
                  <h3 class="mb-0"> 
                    <span class="title">{{block.settings.block_title}}</span>
                  </h3>
                </div>

                <div class="product_best_sell">
                  {% for product in collections[col].products limit: products_limit %}
                  {% include 'product-item-list-v1' %}
                  {% else %}
                  {% for i in (1..3) %}
                  {% include 'empty-product-item-list-v1' %}
                  {% endfor %}
                  {% endfor %}
                </div>
              </div>
            </div>
            {% endif %}
            {% endfor %}
          {% endif %}
          </div>
        </div>
        <div class="{% if section.settings.select_position_banner == 'left' %}col-12 col-md-5 col-lg-4 order-1{% else %}col-12 col-md-5 col-lg-4 order-2{% endif %}">
          {% if section.settings.block_banner_img != blank %}
          <a href="{{section.settings.block_banner_url}}">
            <img src="{{section.settings.block_banner_img | img_url: 'master'}}" class="img-fluid w-100" alt="_img_banner_">
          </a>
          {% else %}
          <a href="{{section.settings.block_banner_url}}">
            <img src="//via.placeholder.com/610x680" class="img-fluid w-100" alt="_img_banner_">
          </a>
          {% endif %}
        </div>

      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "PRODUCT V5",
  "max_blocks": 2,
  "class": "index-section",
  "settings": [
        {
          "type": "header",
          "content": "Position Banner"
        },
        {
          "type": "select",
          "id": "select_position_banner",
          "label": "Choose The Position Banner",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "right"
        },
    {
      "type": "image_picker",
      "id": "block_banner_img",
      "label": "Banner Image",
      "info": "611 x 899px recommended"
    },
    {
      "type": "url",
      "id": "block_banner_url",
      "label": "Banner URL",
      "default": "/collections/all"
    },
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "text",
          "id": "block_title",
          "label": "Title",
          "default": "FEATURED PRODUCTS"
        },
        {
          "type": "collection",
          "id": "select_collection",
          "label": "Select Collection"
        },
        {
          "type": "range",
          "id": "products_limit",
          "label": "Limit products",
          "min": 1,
          "max": 50,
          "step": 1,
          "default": 3
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "PRODUCT V5",
      "category": "HOME",
      "blocks": [
        {
          "type": "collection",
          "settings": {
            "block_title": "FEATURED PRODUCTS"
          }
        },
        {
          "type": "collection",
          "settings": {
            "block_title": "TOP RATED PRODUCTS"
          }
        }
      ]
    }
  ]
}
{% endschema %}

