<div class="product-countdown">
  <div class="item-product-content engoj_grid_parent relative">
    <div class="img-product relative" >
      <a href="#" >
        <img loading="lazy" width="" height="" style="width: 100%" data-src="//via.placeholder.com/960x997" class="lazyload img-responsive" alt="1">
      </a>
    </div>

    <div class="info-product">
      <span class="shopify-product-reviews-badge" data-id="{{ product.id }}"></span>
      <h4 class="title-product">
        <a href="#">Example title product</a>
      </h4>
      <!--     PRICE -->
      <p class="price-product">        
        <span class="price">$40.00</span>
        <s class="price-old">$80.00</s>
      </p>
      
      <div class="product-description">
        Lorem ipsum dolor sit amet, consectetur adipiscing elit.
      </div>

       <!--     ICON PRODUCT -->

      <div class="product-icon-action">
        <div class="add-to-cart">
          <form method="post" action="/cart/add" enctype="multipart/form-data" class="inline-block icon-addcart margin_right_10 box-shadow" data-toggle="tooltip" data-placement="top" data-original-title="{{settings.pia_addcart_name}}">
            <button type="submit" name="add" class="">
              {% if settings.pia_addcart_svg != blank %}
              <i class="fsz-unset">{{ settings.pia_addcart_svg }}</i>
              {% else %}
              <i class="{{ settings.pia_addcart }}" style="font-size: 22px;"></i>
              {% endif %}
              <span>{{settings.pia_addcart_name}}</span>
            </button>
          </form>
        </div>
		
        <div class="add-wishlist">
          <a href="javascript:void(0)" class=" icon-quickview inline-block box-shadow" data-toggle="tooltip" data-placement="top" data-original-title="{{ settings.pia_wishlist_name }}">
            {% if settings.pia_wishlist_svg != blank %} 
            <i class="fsz-unset">{{ settings.pia_wishlist_svg }}</i>
            {% else %}
            <i class="{{ settings.pia_wishlist }}"></i>
            {% endif %}
          </a> 
        </div>
        <div class="quick-view">
          <a href="javascript:void(0)" class=" icon-quickview inline-block box-shadow" data-id="{{ product.handle }}" data-toggle="tooltip" data-placement="top" data-original-title="{{ settings.pia_quickview_name }}">
            {% if settings.pia_quickview_svg %}
            <i class="fsz-unset">{{ settings.pia_quickview_svg }}</i>
            {% else %}
            <i class="{{ settings.pia_quickview }}"></i>
            {% endif %}
          </a>
        </div>
      </div>
      <!--     END ICON -->      
      
    </div>
  </div>
  {% if product.metafields.engo_countdown_prod.countdown_datetime != blank %}
  <div class="content-countdown">
    <h2>HungRy Up !</h2>
    <div class="item-countdown">
      <h2>Offer end in :</h2>
      <div class="countdown-timer">          
        <ul data-countdown="product-countdown" data-date="{{product.metafields.engo_countdown_prod.countdown_datetime}}">

        </ul>
      </div> 
    </div>
  </div>
  {% endif %}
</div>  