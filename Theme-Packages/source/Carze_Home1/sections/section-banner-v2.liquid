<div data-section-id="{{ section.id }}" data-section-type="section-banner-v2" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-banner-v2">
    <div class="js-banner-v2">
      {% for block in section.blocks %}
      {% if block.type == 'banner' %}
      <div class="banner-item">
        <div class="banner-image">
          <a href="{{block.settings.url_banner}}" class="box-img d-block">
            {% if block.settings.img_banner != blank %}
            <img data-src="{{block.settings.img_banner | img_url: 'master'}}" class="lazyload img-fluid w-100" alt="_img">
            {% else %}
            <img data-src="//via.placeholder.com/800x1350" class="lazyload img-fluid w-100" alt="_img">
            {% endif %}
          </a>
        </div>
        <div class="content">
          {% if block.settings.block_title != blank %}
          <h3 class="title mb-0">
            <a href="{{block.settings.block_url}}">
              {{block.settings.block_title}}
            </a>
          </h3>
          {% endif %}
        </div>
      </div>
      {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .section-banner-v2 .slide-arrow {
    color: {{section.settings.color_arrow}};
  }
</style>

