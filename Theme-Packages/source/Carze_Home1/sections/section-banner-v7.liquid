<div data-section-id="{{ section.id }}" data-section-type="section-banner-v7" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{% endif %} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-banner-v7 mt-all">
    <div class="{% if section.settings.ena_container %} container container-v2 {% endif %}">
      <div class="row no-gutters align-items-center text-center text-md-left"  style="background-color:{{ section.settings.bg_banner }}"> 
        <div class="col-md-4">
          <div class="banner-left">
            <div class="banner-left">
              <img loading="lazy" width="" height="" data-src="{% if section.settings.img_left != blank %} {{ section.settings.img_left | image_url }} {% else %} //via.placeholder.com/400x500 {% endif %}" class="lazyload img-fluid">
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="banner-center">
            {% if section.settings.sub_top != blank %}
            <p class="title-top" style="color: {{ section.settings.color_sub_top }}">{{ section.settings.sub_top }}</p>
            {% endif %}

            {% if section.settings.title != blank %}
            <h3 class="title">{{ section.settings.title }}</h3>
            {% endif %}

            {% if section.settings.sub_bot != blank %}
            <p class="title-bot">{{ section.settings.sub_bot }}</p>
            {% endif %}
            {% if section.settings.button_banner != blank %}
            <a href="{{ section.settings.url_banner }}" class="button-shop button-shop-{{ section.id }}">{{ section.settings.button_banner }}</a>
            {% endif %}

          </div>
        </div>
        <div class="col-md-4">
          <div class="banner-right">
            <img loading="lazy" width="" height="" data-src="{% if section.settings.img_right != blank %} {{ section.settings.img_right | image_url }} {% else %} //via.placeholder.com/600x800 {% endif %}" class="w-100 lazyload img-fluid">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .section-banner-v7 .banner-center .button-shop-{{ section.id }} {
    color: {{ section.settings.color_btn }};
    background: {{ section.settings.bg_btn }};
  }
  .section-banner-v7 .banner-center .button-shop-{{ section.id }}:hover {
    color: {{ section.settings.color_btn_hover }};
    background: {{ section.settings.bg_btn_hover }};
  }
</style>
