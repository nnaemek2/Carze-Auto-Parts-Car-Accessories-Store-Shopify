<div data-section-id="{{ section.id }}" data-section-type="section-brand-newsletter-v1" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-brand-newsletter-v1 mt-all">
    <div class="container container-v2">
      <div class="row no-gutters">
        <div class="col-12 col-lg-6 brand">
          <div class="brand-content">
            {% if section.settings.section_title != blank %}
              <div class="heading">
                <h3 class="title" style="color:{{section.settings.color_title}}">
                  {{section.settings.section_title}}
                </h3>
              </div>
            {% endif %}
            <div class="js-brand-testi brand-slide row">
            {% if section.blocks.size > 0 %}
            {% for block in section.blocks %}
            {% if block.type == 'brand' %}
              <div class="col-12">
                <div class="item">
                  <a href="{{block.settings.brand_url}}">
                    {% if block.settings.brand_img != blank %}
                    <img src="{{block.settings.brand_img|img_url:'master'}}" class="img-fluid" alt="brand">
                    {% else %}
                    <img src="https://placehold.it/165x90" class="img-fluid" alt="brand">
                    {% endif %}
                  </a>
                </div>
              </div>
            {% endif %}
            {% endfor %}
            {% endif %} 
            </div>
          </div>
        </div>
        <div class="col-12 col-lg-6" style="background: {{section.settings.bg_newsletter}}">
          <div class="content-newsletter align-items-center">
            <div class="info-newsletter">

              {% if section.settings.icon1 != blank %}
              <div class="icon" style="color:{{section.settings.color_icon}}">
                <i class="{{section.settings.icon1}}"></i>
              </div>
              {% endif %}

              {% if section.settings.title_newletter != blank %}
              <h3 class="title-newsletter" style="color:{{section.settings.color_title_newsletter}}">
                {{section.settings.title_newletter}}
                </h3>
              {% endif %}
              {% if section.settings.description != blank %}
              <p class="desc" style="color:{{section.settings.color_desc}}">
                {{section.settings.description}}
              </p>
              {% endif %}

            </div>
            <div class="newletter_email">          
              <form class="newsletter-form-wrap form-inline" action="{{form_action}}" method="post">
                <input type="email" name="EMAIL" class="form-control" placeholder="{{ 'general.newsletter_form.newsletter_emai_2' | t }}" required >   
                <button class="btn submit-newsletter" type="submit">{{ 'general.newsletter_form.submit_footer' | t }}</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .section-brand-newsletter-v1 .newletter_email .newsletter-form-wrap input {
    color: {{ section.settings.color_input }};
    border-color: {{ section.settings.color_input }};
  }
  .section-brand-newsletter-v1 .newletter_email .newsletter-form-wrap input::placeholder {
    color: {{ section.settings.color_input }};
  }
  .section-brand-newsletter-v1 .newletter_email .newsletter-form-wrap .submit-newsletter {
    background: {{ section.settings.bg_color_button}};
    color: {{ section.settings.color_button}};
  }
  .section-brand-newsletter-v1 .newletter_email .newsletter-form-wrap .submit-newsletter:hover {
    background: {{ section.settings.bg_button_hover}};
    color: {{ section.settings.color_button_hover}};
  }
</style>
